<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.TranslatorActivity">

    <ImageView
        android:id="@+id/changeLanguage1ImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_change_circle_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/language1ImageView"
        app:layout_constraintEnd_toEndOf="@+id/language1ImageView"
        app:layout_constraintStart_toStartOf="@+id/language1ImageView" />

    <ImageView
        android:id="@+id/language1ImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startTranslationImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/language1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/arimo_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/language1ImageView"
        app:layout_constraintStart_toStartOf="@+id/language1ImageView"
        app:layout_constraintTop_toBottomOf="@+id/language1ImageView" />

    <ImageView
        android:id="@+id/changeLanguage2ImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_change_circle_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/language2ImageView"
        app:layout_constraintEnd_toEndOf="@+id/language2ImageView"
        app:layout_constraintStart_toStartOf="@+id/language2ImageView" />

    <ImageView
        android:id="@+id/language2ImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startTranslationImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/language2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/arimo_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/language2ImageView"
        app:layout_constraintStart_toStartOf="@+id/language2ImageView"
        app:layout_constraintTop_toBottomOf="@+id/language2ImageView" />

    <ImageView
        android:id="@+id/startTranslationImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_shadow"
        android:src="@drawable/ic_translation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/languageDisplayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTranslationImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>